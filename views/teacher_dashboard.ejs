<!DOCTYPE html>
<html lang="ar" dir="rtl">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no">
    <title><%= titre %> - مدرسة ابن دريد</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <link rel="stylesheet" href="/css/teacher_style.css">  
</head>
<body>

<div class="container">
    
    <% if (success) { %>
        <div class="toast success-toast">
            <i class="fas fa-check-circle"></i> تم رصد الغياب بنجاح.
        </div>
    <% } %>

    <header class="main-header">
        <div class="user-profile">
            <div class="avatar"><i class="fas fa-user-tie"></i></div>
            <div class="user-info">
                <h1>أهلاً، أستاذ/ <%= prof.nom %></h1>
                <span><i class="fas fa-book-open"></i> <%= prof.matiere %></span>
            </div>
        </div>
        <a href="/logout" class="btn-logout-alt"><i class="fas fa-sign-out-alt"></i></a>
    </header>

    <section class="section no-padding">
        <div class="section-header pd-20">
            <i class="fas fa-clock"></i>
            <h2>جدول الحصص اليومي</h2>
        </div>
        <div class="timetable-wrapper">
            <div class="timetable-slider">
                <% if (sessions.length === 0) { %>
                    <p class="empty-msg">لا توجد حصص مجدولة اليوم</p>
                <% } else { %>
                    <% 
                       // فرز الحصص وتحديد الحصة القادمة (مثال: أول حصة في القائمة)
                       sessions.sort((a,b) => a.periode - b.periode).forEach((s, index) => { 
                       let isNext = (index === 0); // المنطق: أول حصة هي القادمة حالياً
                    %>
                        <div class="session-card <%= isNext ? 'next-session' : '' %>">
                            <% if(isNext) { %><div class="neon-badge">التالية</div><% } %>
                            <span class="period">الحصة <%= s.periode %></span>
                            <span class="class-name"><%= s.classe %> / <%= s.section %></span>
                        </div>
                    <% }) %>
                <% } %>
            </div>
        </div>
    </section>

    <div class="dashboard-grid">
        <section class="section alert-section">
            <div class="section-header">
                <i class="fas fa-bullhorn"></i>
                <h2>تنبيهات الغياب</h2>
            </div>
            <div class="alerts-wrapper">
                <% if (replacements.length === 0) { %>
                    <p class="no-alerts">✅ الكادر مكتمل اليوم.</p>
                <% } else { %>
                    <% replacements.forEach(t => { %>
                        <div class="alert-item">
                            <span>غياب: <b><%= t.nom %></b> (<%= t.matiere %>)</span>
                        </div>
                    <% }) %>
                <% } %>
            </div>
        </section>
    </div>

    <section class="section main-section">
        <div class="section-header">
            <i class="fas fa-user-check"></i>
            <h2>رصد غياب الطلاب</h2>
        </div>
        
        <form action="/teacher/absences/mark" method="POST">
            <input type="hidden" name="teacher_id" value="<%= prof.id %>">
            <input type="hidden" name="date" value="<%= today %>">
            
            <div class="selection-box">
                <select name="periode" id="sessionSelect" required onchange="filterStudents()">
                    <option value="" disabled selected>-- اختر الحصة للرصد --</option>
                    <% sessions.forEach(s => { %>
                        <option value="<%= s.periode %>" data-class="<%= s.classe %>-<%= s.section %>">
                            حصة <%= s.periode %>: <%= s.classe %> / <%= s.section %>
                        </option>
                    <% }) %>
                </select>
            </div>

            <div id="tableContainer" class="table-container hidden">
                <div class="student-list-mobile">
                    <% students.forEach(s => { %>
                        <div class="student-card student-row" data-class-id="<%= s.classe %>-<%= s.section %>">
                            <span class="student-name"><%= s.nom %></span>
                            <label class="switch">
                                <input type="checkbox" name="student_ids[]" value="<%= s.id %>">
                                <span class="slider-toggle"></span>
                            </label>
                        </div>
                    <% }) %>
                </div>
                <button type="submit" class="btn-submit-full">إرسال كشف الغياب</button>
            </div>
        </form>
    </section>

    <section class="section behavior-section">
        <div class="section-header">
            <i class="fas fa-pen-nib"></i>
            <h2>ملاحظة سلوكية سريعة</h2>
        </div>
        <form action="/teacher/behavior/add" method="POST" class="quick-form">
            <input type="hidden" name="teacher_id" value="<%= prof.id %>">
            <select name="student_id" required>
                <option value="">اختر الطالب...</option>
                <% students.forEach(s => { %>
                    <option value="<%= s.id %>"><%= s.nom %> (<%= s.classe %>/<%= s.section %>)</option>
                <% }) %>
            </select>
            <textarea name="event_desc" placeholder="اكتب الملاحظة هنا..." required></textarea>
            <button type="submit" class="btn-save-full">حفظ الملاحظة</button>
        </form>
    </section>

</div>

<script>
    function filterStudents() {
        const select = document.getElementById('sessionSelect');
        const target = select.options[select.selectedIndex].getAttribute('data-class');
        const cards = document.querySelectorAll('.student-card');
        const container = document.getElementById('tableContainer');

        let count = 0;
        cards.forEach(card => {
            if (card.getAttribute('data-class-id') === target) {
                card.style.display = 'flex';
                count++;
            } else {
                card.style.display = 'none';
            }
        });

        if(count > 0) container.classList.remove('hidden');
        else container.classList.add('hidden');
    }

    // تمرير تلقائي للحصة القادمة
    window.onload = function() {
        const nextSession = document.querySelector('.next-session');
        if (nextSession) {
            nextSession.scrollIntoView({ behavior: 'smooth', inline: 'center', block: 'nearest' });
        }
    }
</script>
</body>
</html>