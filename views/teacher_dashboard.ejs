<!DOCTYPE html>
<html lang="ar" dir="rtl">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no">
    <title><%= titre %> - مدرسة ابن دريد | نظام الإدارة المتكامل</title>
    
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <link href="https://fonts.googleapis.com/css2?family=Cairo:wght@300;400;600;700;900&display=swap" rel="stylesheet">
    
    <style>
        :root {
            --primary: #1e3a8a;
            --primary-gradient: linear-gradient(135deg, #1e3a8a, #3b82f6);
            --accent: #ef4444;
            --success: #10b981;
            --warning: #f59e0b;
            --bg: #f8fafc;
            --card-bg: #ffffff;
            --radius-xl: 24px;
            --radius-lg: 16px;
            --shadow: 0 10px 25px -5px rgba(0, 0, 0, 0.1);
            --transition: all 0.3s ease;
        }

        * { margin: 0; padding: 0; box-sizing: border-box; font-family: 'Cairo', sans-serif; scroll-behavior: smooth; }
        body { background-color: var(--bg); color: #1e293b; line-height: 1.6; padding-bottom: 80px; } /* مسافة للشريط السفلي */
        .container { max-width: 1200px; margin: 0 auto; padding: 15px; }
        .hidden { display: none !important; }

        /* --- Header --- */
        .main-header {
            background: var(--primary-gradient); color: white; padding: 30px 20px; border-radius: var(--radius-xl);
            display: flex; justify-content: space-between; align-items: center; margin-bottom: 20px; box-shadow: var(--shadow);
        }
        .live-clock-box { text-align: left; background: rgba(0,0,0,0.2); padding: 8px 15px; border-radius: 12px; }
        #live-clock { font-size: 1.6rem; font-weight: 900; display: block; }

        /* --- Notifications Wrapper (Below Header) --- */
        .notifications-container { margin-bottom: 25px; }

        .substitution-alert {
            background: #fff3cd; border-right: 6px solid var(--warning);
            padding: 15px 20px; border-radius: var(--radius-lg); margin-bottom: 12px;
            display: flex; align-items: center; justify-content: space-between;
            box-shadow: var(--shadow); animation: slideDown 0.5s ease-out;
        }
        .sub-info { display: flex; align-items: center; gap: 12px; }
        .sub-info i { font-size: 1.5rem; color: var(--warning); animation: pulse-icon 1.5s infinite; }
        
        .btn-accept { background: var(--success); color: white; border: none; padding: 8px 18px; border-radius: 10px; cursor: pointer; font-weight: bold; font-size: 0.9rem; }

        .admin-notif-bar {
            background: #e0f2fe; border-right: 6px solid var(--primary);
            padding: 15px 20px; border-radius: 15px; margin-bottom: 12px;
            display: flex; align-items: center; gap: 15px; animation: slideDown 0.5s ease;
            box-shadow: var(--shadow);
        }

        /* --- Stats --- */
        .stats-grid { display: grid; grid-template-columns: 1fr 1fr; gap: 15px; margin-bottom: 25px; }
        .stat-card { background: var(--card-bg); padding: 15px; border-radius: var(--radius-lg); box-shadow: var(--shadow); display: flex; align-items: center; gap: 10px; border-bottom: 4px solid var(--primary); }
        .stat-icon { width: 40px; height: 40px; border-radius: 10px; display: flex; align-items: center; justify-content: center; font-size: 1.2rem; background: #eff6ff; color: var(--primary); }

        /* --- Timetable --- */
        .banner-container { background: #e2e8f0; padding: 20px 10px; border-radius: 25px; overflow: hidden; margin-bottom: 30px; }
        .banner-scroll { display: flex; gap: 15px; overflow-x: auto; padding: 10px; scrollbar-width: none; }
        .banner-scroll::-webkit-scrollbar { display: none; }
        .period-card {
            min-width: 150px; background: white; border-radius: 18px; padding: 20px 10px;
            text-align: center; flex-shrink: 0; border: 3px solid transparent; transition: var(--transition);
        }
        .period-card.active-now { border-color: var(--accent); background: #fff1f2; transform: scale(1.03); }
        
        /* --- Panels --- */
        .panel { background: var(--card-bg); border-radius: var(--radius-xl); padding: 25px; box-shadow: var(--shadow); margin-bottom: 25px; }
        .student-grid { display: grid; grid-template-columns: 1fr; gap: 12px; margin-top: 15px; }
        .student-card { background: #f1f5f9; padding: 15px; border-radius: 12px; display: flex; justify-content: space-between; align-items: center; border: 1px solid #e2e8f0; }

        .todo-section { background: var(--card-bg); padding: 25px; border-radius: var(--radius-xl); box-shadow: var(--shadow); margin-bottom: 25px; }
        .todo-input-group { display: flex; gap: 8px; margin-bottom: 15px; }
        .todo-input { flex: 1; padding: 12px; border: 1px solid #e2e8f0; border-radius: 12px; outline: none; }

        .btn-submit { width: 100%; background: var(--primary); color: white; border: none; padding: 15px; border-radius: 15px; font-weight: 700; cursor: pointer; }
        
        /* --- Bottom Navigation --- */
        .bottom-nav {
            position: fixed; bottom: 0; left: 0; right: 0; background: white;
            display: flex; justify-content: space-around; align-items: center;
            height: 70px; box-shadow: 0 -5px 20px rgba(0,0,0,0.08);
            border-top-left-radius: 20px; border-top-right-radius: 20px; z-index: 1000;
        }
        .nav-item { color: #94a3b8; font-size: 1.5rem; padding: 10px; transition: var(--transition); text-decoration: none; }
        .nav-item.active { color: var(--primary); transform: translateY(-5px); }

        /* Switch */
        .switch { position: relative; width: 45px; height: 24px; }
        .switch input { opacity: 0; width: 0; height: 0; }
        .slider { position: absolute; cursor: pointer; inset: 0; background: #cbd5e1; border-radius: 34px; transition: 0.4s; }
        .slider:before { position: absolute; content: ""; height: 16px; width: 16px; left: 4px; bottom: 4px; background: white; border-radius: 50%; transition: 0.4s; }
        input:checked + .slider { background: var(--accent); }
        input:checked + .slider:before { transform: translateX(21px); }

        @keyframes slideDown { from { opacity: 0; transform: translateY(-20px); } to { opacity: 1; transform: translateY(0); } }
        @keyframes pulse-icon { 0% { transform: scale(1); } 50% { transform: scale(1.1); } 100% { transform: scale(1); } }
    </style>
</head>
<body>

<div class="container" id="home-section">
    <header class="main-header">
        <div>
            <h1 style="font-size: 1.4rem; font-weight: 900;">أهلاً أ/ <%= prof.nom %></h1>
            <p id="today-date-text" style="font-size: 0.8rem; opacity: 0.9;"></p>
        </div>
        <div class="live-clock-box">
            <span id="live-clock">00:00</span>
            <small id="current-status-text" style="font-size: 0.6rem;">جاري الفحص...</small>
        </div>
    </header>

    <div class="notifications-container">
        <% if (typeof pendingRequests !== 'undefined' && pendingRequests.length > 0) { %>
            <div id="sub-requests-container">
                <% pendingRequests.forEach(sub => { %>
                    <div class="substitution-alert">
                        <div class="sub-info">
                            <i class="fas fa-clock-rotate-left"></i>
                            <div>
                                <strong style="font-size: 0.9rem;">حصة احتياط: <%= sub.periode %></strong>
                                <p style="font-size: 0.8rem;"><%= sub.classe %>-<%= sub.section %> (بديل <%= sub.absent_name %>)</p>
                            </div>
                        </div>
                        <form action="/teacher/substitute/respond" method="POST">
                            <input type="hidden" name="sub_id" value="<%= sub.id %>">
                            <input type="hidden" name="action" value="accept">
                            <button type="submit" class="btn-accept">قبول</button>
                        </form>
                    </div>
                <% }) %>
            </div>
        <% } %>

        <% if (typeof announcements !== 'undefined' && announcements.length > 0) { %>
            <div id="admin-announcements-container">
                <% announcements.forEach(ann => { %>
                    <div class="admin-notif-bar" id="ann-box-<%= ann.id %>">
                        <i class="fas fa-bullhorn" style="color: var(--primary);"></i>
                        <div style="flex:1; font-size: 0.85rem;">
                            <strong>إشعار إداري:</strong> <%= ann.content %>
                        </div>
                        <button onclick="dismissAnnouncement('<%= ann.id %>')" style="background:none; border:none; cursor:pointer; color:var(--accent); padding:5px;">
                            <i class="fas fa-times-circle"></i>
                        </button>
                    </div>
                <% }) %>
            </div>
        <% } %>
    </div>

    <div class="stats-grid">
        <div class="stat-card">
            <div class="stat-icon"><i class="fas fa-tasks"></i></div>
            <div><h3 id="todo-count" style="font-size: 1.2rem;">0</h3><p style="font-size: 0.7rem;">مهام</p></div>
        </div>
        <div class="stat-card">
            <div class="stat-icon" style="color: var(--success);"><i class="fas fa-check-double"></i></div>
            <div>
                <h3 id="marked-sessions" style="font-size: 1.2rem;"><%= sessions.filter(s => s.is_marked).length %></h3>
                <p style="font-size: 0.7rem;">رصد مكتمل</p>
            </div>
        </div>
    </div>

    <div id="schedule-section">
        <h3 style="margin-bottom: 12px; color: var(--primary); font-size: 1.1rem;"><i class="fas fa-calendar-day"></i> الجدول اليومي</h3>
        <div class="banner-container">
            <div class="banner-scroll" id="banner-scroll">
                <% for(let i=1; i<=8; i++) { 
                    let p = periods.find(x => x.id === i);
                    let s = sessions.find(x => x.periode === i);
                %>
                    <div class="period-card" id="period-<%= i %>">
                        <span style="font-size: 0.7rem; font-weight: bold; color: #64748b;">الحصة <%= i %></span>
                        <div style="font-size: 1.1rem; font-weight: 900; color: var(--primary); margin: 8px 0;">
                            <% if (s) { %>
                                <%= s.classe %>-<%= s.section %>
                                <% if(s.isSubstitute) { %><br><small style="color:var(--accent); font-size:0.6rem;">(إحتياط)</small><% } %>
                            <% } else { %>
                                فراغ
                            <% } %>
                        </div>
                        <span style="font-size: 0.7rem; color: #94a3b8;"><i class="far fa-clock"></i> <%= p ? p.start_time : '--:--' %></span>
                    </div>
                <% } %>
            </div>
        </div>
    </div>

    <div class="panel" id="attendance-section">
        <h3 style="margin-bottom: 15px; color: var(--primary); font-size: 1.1rem;"><i class="fas fa-user-check"></i> رصد الغياب اليومي</h3>
        <div id="no-session-msg" class="hidden" style="text-align: center; color: #94a3b8; padding: 30px;">
            <i class="fas fa-hourglass-start" style="font-size: 2.5rem; margin-bottom: 10px; opacity: 0.3;"></i>
            <p>لا توجد حصة نشطة حالياً</p>
        </div>

        <div id="attendance-active" class="hidden">
            <div style="background: #eff6ff; padding: 12px; border-radius: 10px; border-right: 4px solid var(--primary); margin-bottom: 15px; font-size: 0.9rem;">
                <strong>فصل: </strong> <span id="active-class-title">--</span>
            </div>
            <form action="/teacher/absences/mark" method="POST">
                <input type="hidden" name="teacher_id" value="<%= prof.id %>">
                <input type="hidden" name="date" id="input-date">
                <input type="hidden" name="periode" id="input-p">
                <div class="student-grid" id="student-grid-container"></div>
                <button type="submit" class="btn-submit">تأكيد وحفظ الغياب</button>
            </form>
        </div>
    </div>

    <div id="tasks-section" class="todo-section">
        <h3 style="margin-bottom: 15px; color: var(--primary); font-size: 1.1rem;"><i class="fas fa-list-check"></i> قائمة المهام الشخصية</h3>
        <div class="todo-input-group">
            <input type="text" id="todo-input" class="todo-input" placeholder="مهمة جديدة...">
            <button onclick="addTodo()" style="background:var(--primary); color:white; border:none; padding:10px 15px; border-radius:12px; cursor:pointer;">إضافة</button>
        </div>
        <ul id="todo-list" style="list-style: none;"></ul>
    </div>

    <div id="behavior-section" class="panel">
        <h3 style="margin-bottom: 15px; color: var(--primary); font-size: 1.1rem;"><i class="fas fa-user-shield"></i> تسجيل ملاحظة سلوكية</h3>
        <form action="/teacher/behavior/add" method="POST">
            <input type="hidden" name="teacher_id" value="<%= prof.id %>">
            <div style="display: flex; flex-direction: column; gap: 12px;">
                <select name="student_id" required style="padding: 15px; border-radius: 12px; border: 1px solid #ddd; font-family: 'Cairo'; -webkit-appearance: none;">
                    <option value="">اختر الطالب...</option>
                    <% students.forEach(st => { %>
                        <option value="<%= st.id %>"><%= st.nom %> (<%= st.classe %>-<%= st.section %>)</option>
                    <% }) %>
                </select>
                <textarea name="event_text" placeholder="اكتب تفاصيل الملاحظة..." required style="padding: 15px; border-radius: 12px; border: 1px solid #ddd; height: 100px; font-family: 'Cairo';"></textarea>
                <button type="submit" class="btn-submit">إرسال للمدير</button>
            </div>
        </form>
    </div>
</div>

<nav class="bottom-nav">
    <a href="#home-section" class="nav-item active"><i class="fas fa-home"></i></a>
    <a href="#schedule-section" class="nav-item"><i class="fas fa-calendar-alt"></i></a>
    <a href="#attendance-section" class="nav-item"><i class="fas fa-user-check"></i></a>
    <a href="#tasks-section" class="nav-item"><i class="fas fa-tasks"></i></a>
    <a href="#behavior-section" class="nav-item"><i class="fas fa-exclamation-triangle"></i></a>
</nav>

<script>
    const SESSIONS = <%- JSON.stringify(sessions) %>;
    const PERIODS = <%- JSON.stringify(periods) %>;
    const STUDENTS = <%- JSON.stringify(students) %>;

    // --- الوظائف الأساسية ---
    function updateApp() {
        const now = new Date();
        const mins = now.getHours() * 60 + now.getMinutes();
        
        document.getElementById('live-clock').textContent = now.toLocaleTimeString('ar-EG', {hour:'2-digit', minute:'2-digit', hour12:false});
        document.getElementById('today-date-text').textContent = now.toLocaleDateString('ar-EG', {weekday:'long', day:'numeric', month:'short'});
        document.getElementById('input-date').value = now.toISOString().split('T')[0];

        let activeP = null;
        PERIODS.forEach(p => {
            const card = document.getElementById(`period-${p.id}`);
            const [hS, mS] = p.start_time.split(':').map(Number);
            const [hE, mE] = p.end_time.split(':').map(Number);
            const start = hS * 60 + mS;
            const end = hE * 60 + mE;

            if (mins >= start && mins <= end) {
                card.classList.add('active-now');
                activeP = p;
            } else {
                card.classList.remove('active-now');
            }
        });
        manageAttendanceUI(activeP);
    }

    function manageAttendanceUI(p) {
        const noMsg = document.getElementById('no-session-msg');
        const activeArea = document.getElementById('attendance-active');
        const statusText = document.getElementById('current-status-text');

        if (!p) {
            noMsg.classList.remove('hidden'); activeArea.classList.add('hidden');
            statusText.textContent = "خارج وقت العمل"; return;
        }

        const session = SESSIONS.find(s => s.periode === p.id);
        if (!session || session.is_marked) {
            noMsg.classList.remove('hidden'); activeArea.classList.add('hidden');
            statusText.textContent = session ? "تم الرصد" : "استراحة";
        } else {
            noMsg.classList.add('hidden'); activeArea.classList.remove('hidden');
            statusText.textContent = `حصة ${p.id} جارية`;
            document.getElementById('active-class-title').textContent = `${session.classe}-${session.section}`;
            document.getElementById('input-p').value = p.id;
            renderStudents(session.classe, session.section);
        }
    }

    function renderStudents(classe, section) {
        const container = document.getElementById('student-grid-container');
        container.innerHTML = "";
        const list = STUDENTS.filter(s => s.classe == classe && s.section == section);
        list.forEach(st => {
            container.innerHTML += `
                <div class="student-card">
                    <span style="font-size: 0.9rem;">${st.nom}</span>
                    <label class="switch">
                        <input type="checkbox" name="student_ids[]" value="${st.id}">
                        <span class="slider"></span>
                    </label>
                </div>`;
        });
    }

    // --- إدارة المهام ---
    let todos = JSON.parse(localStorage.getItem('teacher_todos')) || [];
    function saveTodos() { localStorage.setItem('teacher_todos', JSON.stringify(todos)); displayTodos(); }
    function addTodo() {
        const input = document.getElementById('todo-input');
        if (!input.value.trim()) return;
        todos.push({ id: Date.now(), text: input.value, completed: false });
        input.value = ""; saveTodos();
    }
    function toggleTodo(id) { todos = todos.map(t => t.id === id ? {...t, completed: !t.completed} : t); saveTodos(); }
    function deleteTodo(id) { todos = todos.filter(t => t.id !== id); saveTodos(); }
    function displayTodos() {
        const list = document.getElementById('todo-list');
        list.innerHTML = "";
        let count = 0;
        todos.forEach(t => {
            if(!t.completed) count++;
            list.innerHTML += `
                <li style="display:flex; justify-content:space-between; padding:12px 0; border-bottom:1px solid #eee;">
                    <span onclick="toggleTodo(${t.id})" style="cursor:pointer; font-size: 0.9rem; ${t.completed ? 'text-decoration:line-through; opacity:0.5' : ''}">
                        <i class="far ${t.completed ? 'fa-check-square' : 'fa-square'}"></i> ${t.text}
                    </span>
                    <i class="fas fa-trash" onclick="deleteTodo(${t.id})" style="color:var(--accent); cursor:pointer;"></i>
                </li>`;
        });
        document.getElementById('todo-count').textContent = count;
    }

    // --- إدارة الإشعارات الإدارية (LOCAL STORAGE) ---
    function dismissAnnouncement(id) {
        const el = document.getElementById('ann-box-' + id);
        if (el) el.remove();
        let hidden = JSON.parse(localStorage.getItem('dismissed_ann') || '[]');
        if (!hidden.includes(id)) {
            hidden.push(id);
            localStorage.setItem('dismissed_ann', JSON.stringify(hidden));
        }
    }

    function applyHiddenAnnouncements() {
        try {
            const hidden = JSON.parse(localStorage.getItem('dismissed_ann') || '[]');
            hidden.forEach(id => {
                const el = document.getElementById('ann-box-' + id);
                if (el) el.remove();
            });
        } catch (e) {}
    }

    // --- Navigation Logic ---
    document.querySelectorAll('.nav-item').forEach(link => {
        link.addEventListener('click', function() {
            document.querySelectorAll('.nav-item').forEach(i => i.classList.remove('active'));
            this.classList.add('active');
        });
    });

    // --- الموقتات ---
    setInterval(updateApp, 1000);
    setInterval(() => { location.reload(); }, 120000); // تحديث تلقائي كل دقيقتين للفحص

    window.onload = () => {
        updateApp();
        displayTodos();
        applyHiddenAnnouncements();
    };
</script>

</body>
</html>