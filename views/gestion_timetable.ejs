<!DOCTYPE html>
<html lang="ar" dir="rtl">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>جدول الحصص - مدرسة ابن دريد</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <link href="https://fonts.googleapis.com/css2?family=Cairo:wght@400;600;700;800&display=swap" rel="stylesheet">
    
    <style>
        :root {
            --sidebar-width: 280px;
            --primary-blue: #1e293b;
            --accent-blue: #3b82f6;
            --success-green: #10b981;
            --bg-slate: #f1f5f9;
        }

        body { 
            display: flex; margin: 0; font-family: 'Cairo', sans-serif; 
            background-color: var(--bg-slate); color: var(--primary-blue);
            min-height: 100vh;
        }

        /*Sidebar*/
        .sidebar {
            width: var(--sidebar-width); background: var(--primary-blue);
            color: white; position: fixed; height: 100vh; right: 0; top: 0;
            z-index: 1000; box-shadow: -4px 0 10px rgba(0,0,0,0.1);
        }

        .main-content {
            flex: 1; margin-right: var(--sidebar-width); padding: 30px;
            width: calc(100% - var(--sidebar-width));
        }

        /*Header Controls*/
        .controls-card {
            background: white; padding: 20px; border-radius: 16px;
            box-shadow: 0 4px 6px -1px rgba(0,0,0,0.1); margin-bottom: 25px;
            display: grid; grid-template-columns: repeat(auto-fit, minmax(200px, 1fr)); gap: 20px;
        }

        .input-group label { display: block; margin-bottom: 8px; font-weight: 700; font-size: 0.9rem; }
        input, select { 
            width: 100%; padding: 12px; border: 1px solid #e2e8f0; 
            border-radius: 10px; font-family: inherit; outline: none;
        }

        /*Layout Split*/
        .workspace { display: grid; grid-template-columns: 1fr 320px; gap: 25px; align-items: start; }

        /*Table Styling*/
        .table-container { 
            background: white; padding: 20px; border-radius: 16px; 
            box-shadow: 0 4px 6px -1px rgba(0,0,0,0.1); overflow-x: auto;
        }
        .smart-table { width: 100%; border-collapse: separate; border-spacing: 6px; }
        .smart-table th { background: #f8fafc; padding: 15px; border-radius: 8px; font-size: 0.85rem; }
        .drop-zone { 
            height: 90px; background: #fbfcfd; border: 2px dashed #e2e8f0; 
            border-radius: 12px; transition: 0.2s; min-width: 100px;
        }
        .drop-zone.over { border-color: var(--accent-blue); background: #eff6ff; }

        /*Bassin (Cards Area)*/
        .bassin-panel {
            background: white; border-radius: 16px; padding: 20px;
            box-shadow: 0 4px 6px -1px rgba(0,0,0,0.1);
            position: sticky; top: 30px; max-height: 85vh; overflow-y: auto;
        }

        .class-group-box {
            background: #f8fafc; border: 1px solid #e2e8f0;
            border-radius: 12px; padding: 15px; margin-bottom: 15px;
        }

        .group-header {
            display: flex; justify-content: space-between; align-items: center;
            margin-bottom: 12px; border-bottom: 1px solid #cbd5e1; padding-bottom: 8px;
        }

        .cards-grid { display: grid; grid-template-columns: 1fr 1fr; gap: 8px; }
        
        .drag-card {
            background: linear-gradient(135deg, #3b82f6, #1d4ed8);
            color: white; padding: 10px; border-radius: 8px;
            cursor: grab; font-size: 0.75rem; text-align: center;
            font-weight: 600; box-shadow: 0 2px 4px rgba(59,130,246,0.3);
        }

        .session-item {
            background: white; border: 1px solid #e2e8f0;
            border-right: 4px solid var(--accent-blue);
            border-radius: 8px; padding: 8px; height: 80%;
            display: flex; flex-direction: column; justify-content: center;
            position: relative; font-size: 0.8rem;
        }
        
        .btn-del {
            position: absolute; top: 2px; left: 2px; color: #ef4444;
            background: none; border: none; cursor: pointer; font-size: 0.9rem;
        }

        #suggestions-list {
            position: absolute; background: white; width: 100%;
            z-index: 100; border: 1px solid #ddd; border-radius: 8px;
            box-shadow: 0 10px 15px rgba(0,0,0,0.1); display: none;
        }
        .suggest-item { padding: 12px; cursor: pointer; border-bottom: 1px solid #f1f5f9; }
        .suggest-item:hover { background: #f8fafc; color: var(--accent-blue); }

    </style>
</head>
<body>

<div class="sidebar">
    <div style="padding: 40px 20px; text-align: center;">
        <i class="fas fa-school fa-3x" style="margin-bottom: 15px;"></i>
        <h2 style="font-size: 1.2rem; font-weight: 800;">مدرسة ابن دريد</h2>
    </div>
    <nav style="padding: 0 20px;">
        <a href="/admin/dashboard" style="display: flex; align-items: center; gap: 12px; color: white; text-decoration: none; padding: 15px; background: rgba(255,255,255,0.1); border-radius: 12px;">
            <i class="fas fa-home"></i> العودة للرئيسية
        </a>
    </nav>
</div>

<div class="main-content">
    <div class="controls-card">
        <div class="input-group" style="position: relative;">
            <label><i class="fas fa-user-tie"></i> البحث عن معلم</label>
            <input type="text" id="teacher-search" placeholder="اكتب اسم المعلم..." oninput="searchTeachers(this.value)">
            <div id="suggestions-list"></div>
        </div>
        
        <div class="input-group">
            <label><i class="fas fa-layer-group"></i> عدد الحصص لكل فصل (مثلاً 2 لكل سابع)</label>
            <input type="number" id="sessions-per-class" value="2" min="1" max="10" onchange="refreshBassin()">
        </div>
    </div>

    <div class="workspace">
        <div class="table-container">
            <h3 id="table-title" style="margin-bottom: 20px; font-weight: 800;">الجدول الدراسي العام</h3>
            <table class="smart-table">
                <thead>
                    <tr>
                        <th style="width: 80px;">اليوم / الحصة</th>
                        <% for(let i=1; i<=8; i++) { %> <th><%= i %></th> <% } %>
                    </tr>
                </thead>
                <tbody id="grid-body">
                    <% const jours = ['الأحد', 'الإثنين', 'الثلاثاء', 'الأربعاء', 'الخميس']; %>
                    <% jours.forEach(j => { %>
                        <tr>
                            <td style="font-weight: 800; background: #f8fafc; text-align: center;"><%= j %></td>
                            <% for(let p=1; p<=8; p++) { %>
                                <td class="drop-zone" data-day="<%= j %>" data-period="<%= p %>" 
                                    ondrop="handleDrop(event)" ondragover="allowDrop(event)" ondragleave="clearDropEffect(event)"></td>
                            <% } %>
                        </tr>
                    <% }) %>
                </tbody>
            </table>
        </div>

        <aside class="bassin-panel">
            <h4 style="margin-top: 0; border-bottom: 2px solid #f1f5f9; padding-bottom: 10px;">
                <i class="fas fa-briefcase"></i> بنك الحصص
            </h4>
            <div id="drag-source-area">
                <p style="text-align: center; color: #94a3b8; padding-top: 20px;">يرجى اختيار معلم أولاً</p>
            </div>
        </aside>
    </div>
</div>

<script>
    const enseignants = <%- JSON.stringify(enseignants) %>;
    const allAffectations = <%- JSON.stringify(all_affectations) %>;
    let fullSchedule = <%- JSON.stringify(schedule) %>;
    let currentTeacher = null;

    function searchTeachers(val) {
        const list = document.getElementById('suggestions-list');
        list.innerHTML = '';
        if (!val) { list.style.display = 'none'; return; }

        const matches = enseignants.filter(t => t.nom.toLowerCase().includes(val.toLowerCase()));
        matches.forEach(t => {
            const div = document.createElement('div');
            div.className = 'suggest-item';
            div.innerText = t.nom;
            div.onclick = () => selectTeacher(t);
            list.appendChild(div);
        });
        list.style.display = matches.length ? 'block' : 'none';
    }

    function selectTeacher(t) {
        currentTeacher = t;
        document.getElementById('teacher-search').value = t.nom;
        document.getElementById('suggestions-list').style.display = 'none';
        document.getElementById('table-title').innerText = `جدول المعلم: ${t.nom}`;
        refreshBassin();
        renderGrid();
    }

    function refreshBassin() {
        if (!currentTeacher) return;
        const area = document.getElementById('drag-source-area');
        area.innerHTML = '';
        
        const qtyPerClass = parseInt(document.getElementById('sessions-per-class').value) || 2;
        
        // فلترة التكليفات الخاصة بالمعلم (مثلاً سابع 1، سابع 2...)
        const assignments = allAffectations.filter(a => a.enseignant_id == currentTeacher.id);
        
        assignments.forEach(a => {
            // حساب كم حصة تم وضعها لهذا المعلم في هذا الفصل تحديداً
            const placedCount = fullSchedule.filter(s => 
                s.enseignant_id == currentTeacher.id && 
                s.classe == a.classe && 
                s.section == a.section
            ).length;

            const remaining = qtyPerClass - placedCount;

            const box = document.createElement('div');
            box.className = 'class-group-box';
            box.innerHTML = `
                <div class="group-header">
                    <strong>${a.classe}-${a.section}</strong>
                    <span style="font-size: 0.7rem; font-weight: 800;">${placedCount}/${qtyPerClass}</span>
                </div>
                <div class="cards-grid">
                    ${remaining > 0 ? Array(remaining).fill(0).map(() => `
                        <div class="drag-card" draggable="true" ondragstart="handleDragStart(event, ${JSON.stringify(a).replace(/"/g, '&quot;')})">
                            ${a.classe}-${a.section}
                        </div>
                    `).join('') : '<span style="color:var(--success-green); font-size:0.7rem; grid-column:span 2">✅ مكتمل</span>'}
                </div>
            `;
            area.appendChild(box);
        });
    }

    function handleDragStart(e, data) {
        e.dataTransfer.setData("application/json", JSON.stringify(data));
    }

    function allowDrop(e) { 
        e.preventDefault(); 
        e.currentTarget.classList.add('over'); 
    }

    function clearDropEffect(e) { 
        e.currentTarget.classList.remove('over'); 
    }

   async function handleDrop(e) {

    
   
   
    e.preventDefault();
    e.currentTarget.classList.remove('over');
    if (!currentTeacher) return;

    try {
        const data = JSON.parse(e.dataTransfer.getData("application/json"));
        const payload = {
            enseignant_id: currentTeacher.id,
            class_info: `${data.classe}|${data.section}`,
            jour: e.currentTarget.dataset.day,
            periode: e.currentTarget.dataset.period
        };

        const res = await fetch('/admin/timetable/ajouter-json', {
            method: 'POST',
            headers: {'Content-Type': 'application/json'},
            body: JSON.stringify(payload)
        });
        
        const result = await res.json();
        
        if (result.success) {
            // ملاحظة هامة: يجب أن نتأكد أن السيرفر يعيد result.id 
            // إذا كان السيرفر يعيد نتيجة مختلفة، استخدم المعرف العائد منه
            const newSession = {
                id: result.id, // التأكد من أن هذا هو المعرف الحقيقي من قاعدة البيانات
                enseignant_id: currentTeacher.id,
                classe: data.classe,
                section: data.section,
                jour: payload.jour,
                periode: payload.periode,
                matiere: currentTeacher.matiere
            };

            fullSchedule.push(newSession);
            renderGrid();
            refreshBassin();
        } else {
            alert("خطأ من السيرفر: " + result.message);
        }
    } catch (err) {
        console.error("Drop error:", err);
    }
}
   



async function deleteSession(id) {
    if (!id || id === 'undefined') {
        alert("خطأ: لم يتم العثور على معرف لهذه الحصة. يرجى تحديث الصفحة.");
        return;
    }

    if (!confirm('حذف هذه الحصة؟')) return;
    
    try {
        const res = await fetch(`/admin/timetable/supprimer-json/${id}`, { method: 'DELETE' });
        const result = await res.json();
        if (result.success) {
            fullSchedule = fullSchedule.filter(s => s.id != id);
            renderGrid();
            refreshBassin();
        }
    } catch(err) { console.error("Delete error", err); }
} 

function renderGrid() {
        document.querySelectorAll('.drop-zone').forEach(z => z.innerHTML = '');
        const filtered = fullSchedule.filter(s => s.enseignant_id == currentTeacher?.id);
        
        filtered.forEach(s => {
            const zone = document.querySelector(`.drop-zone[data-day="${s.jour}"][data-period="${s.periode}"]`);
            if (zone) {
                zone.innerHTML = `
                    <div class="session-item">
                        <button class="btn-del" onclick="deleteSession(${s.id})">&times;</button>
                        <strong>${s.classe}-${s.section}</strong>
                        <span style="font-size:0.6rem; color:#64748b">${s.matiere || ''}</span>
                    </div>
                `;
            }
        });
    }
</script>

</body>
</html>