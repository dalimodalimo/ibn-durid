<!DOCTYPE html>
<html lang="ar" dir="rtl">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= titre %> - مدرسة ابن دريد</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <link rel="stylesheet" href="/css/settings_style.css">
    <link rel="stylesheet" href="/css/timetable_style.css">
    <style>
        /* --- تحديثات الهيكلية والقائمة الجانبية --- */
        :root {
            --sidebar-width: 260px;
            --transition-speed: 0.3s;
        }

        body {
            display: flex;
            min-height: 100vh;
            overflow-x: hidden;
            background-color: #f8fafc;
            margin: 0;
        }

        /* القائمة الجانبية */
        .sidebar {
            width: var(--sidebar-width);
            transition: all var(--transition-speed) cubic-bezier(0.4, 0, 0.2, 1);
            right: 0;
            position: fixed;
            height: 100vh;
            z-index: 1000;
            background: #1e293b;
            color: white;
        }

        /* حالة التصغير للقائمة */
        .sidebar.collapsed {
            right: calc(var(--sidebar-width) * -1);
        }

        /* المحتوى الرئيسي */
        .main-content {
            flex: 1;
            margin-right: var(--sidebar-width);
            transition: all var(--transition-speed) cubic-bezier(0.4, 0, 0.2, 1);
            width: 100%;
            padding: 20px;
            padding-top: 70px; /* مساحة لزر التحكم */
        }

        .main-content.expanded {
            margin-right: 0;
        }

        /* زر التحكم (Toggle Button) */
        .sidebar-toggle {
            position: fixed;
            top: 15px;
            right: 15px;
            z-index: 1100;
            background: #3b82f6;
            color: white;
            border: none;
            width: 45px;
            height: 45px;
            border-radius: 10px;
            cursor: pointer;
            display: flex;
            align-items: center;
            justify-content: center;
            box-shadow: 0 4px 12px rgba(59, 130, 246, 0.4);
            transition: 0.3s;
        }

        .sidebar-toggle:hover {
            background: #2563eb;
            transform: scale(1.05);
        }

        /* تحسين استجابة الجدول */
        .table-responsive {
            overflow-x: auto;
            background: white;
            border-radius: 8px;
            box-shadow: 0 2px 5px rgba(0,0,0,0.05);
        }

        @media (max-width: 768px) {
            .sidebar {
                right: calc(var(--sidebar-width) * -1);
            }
            .sidebar.active {
                right: 0;
            }
            .main-content {
                margin-right: 0;
            }
        }
    </style>
</head>
<body>

<button class="sidebar-toggle" id="toggleSidebar" title="إخفاء/إظهار القائمة">
    <i class="fas fa-bars"></i>
</button>

<div class="sidebar" id="sidebar">
    <div class="sidebar-header">
        <h2><i class="fas fa-calendar-alt"></i> الجدول المدرسي</h2>
    </div>

    <div class="sidebar-nav">
        <div class="nav-label">الأساسيات</div>
        <a href="/admin/dashboard"><i class="fas fa-home"></i> العودة للرئيسية</a>
        
        <div class="nav-label">العرض والتصفية</div>
        <a href="#section-filter"><i class="fas fa-search"></i> بحث وتصفية</a>
        <a href="#section-add"><i class="fas fa-plus-circle"></i> إضافة حصة</a>

        <div class="nav-label">البيانات</div>
        <a href="#section-table"><i class="fas fa-table"></i> عرض الجدول</a>
        <a href="/admin/settings"><i class="fas fa-cog"></i> إعدادات الأوقات</a>
    </div>
</div>

<div class="main-content" id="main-content">
    <header class="page-header">
        <h1>إدارة الجدول الأسبوعي</h1>
    </header>

    <div class="card" id="section-filter">
        <h3><i class="fas fa-filter"></i> تصفية عرض البيانات</h3>
        <form action="/admin/timetable" method="GET" class="filter-grid-row">
            <div class="input-group">
                <label>حسب المعلم:</label>
                <select name="teacher_filter" onchange="this.form.submit()">
                    <option value="">-- كل المعلمين --</option>
                    <% enseignants.forEach(p => { %>
                        <option value="<%= p.id %>" <%= teacher_filter == p.id ? 'selected' : '' %>><%= p.nom %></option>
                    <% }) %>
                </select>
            </div>
            
            <div class="input-group">
                <label>حسب الصف:</label>
                <select name="class_filter" onchange="this.form.submit()">
                    <option value="">-- كل الصفوف --</option>
                    <% unique_classes.forEach(c => { %>
                        <% let val = c.classe + "-" + c.section; %>
                        <option value="<%= val %>" <%= class_filter == val ? 'selected' : '' %>>الصف <%= c.classe %> / <%= c.section %></option>
                    <% }) %>
                </select>
            </div>
            <a href="/admin/timetable" class="btn-reset">إعادة تعيين الفلتر</a>
        </form>
    </div>

    <section class="card" id="section-add">
        <h3><i class="fas fa-plus-circle"></i> إضافة حصة جديدة</h3>
        <form action="/admin/timetable/ajouter" method="POST" class="form-grid-layout">
            <div class="input-group">
                <label>المعلم</label>
                <select name="enseignant_id" id="teacher_select" required onchange="filterClasses()">
                    <option value="">اختر المعلم...</option>
                    <% enseignants.forEach(p => { %> <option value="<%= p.id %>"><%= p.nom %></option> <% }) %>
                </select>
            </div>

            <div class="input-group">
                <label>الصف المسند</label>
                <select name="class_info" id="class_select" required disabled>
                    <option value="">حدد المعلم أولاً</option>
                </select>
            </div>

            <div class="input-group">
                <label>اليوم</label>
                <select name="jour" required>
                    <option value="الأحد">الأحد</option>
                    <option value="الإثنين">الإثنين</option>
                    <option value="الثلاثاء">الثلاثاء</option>
                    <option value="الأربعاء">الأربعاء</option>
                    <option value="الخميس">الخميس</option>
                </select>
            </div>

            <div class="input-group">
                <label>الحصة</label>
                <select name="periode" required>
                    <% for(let i=1; i<=8; i++) { %> <option value="<%= i %>">الحصة <%= i %></option> <% } %>
                </select>
            </div>

            <button type="submit" class="btn-save-action"><i class="fas fa-save"></i> حفظ الحصة</button>
        </form>
    </section>

    <div class="card" id="section-table">
        <h2 class="table-title">
            <i class="fas fa-th"></i>
            <% if(teacher_filter) { %> 
                جدول المعلم: <%= enseignants.find(e => e.id == teacher_filter).nom %> 
            <% } else if(class_filter) { %> 
                جدول الصف: <%= class_filter.replace('-',' / ') %> 
            <% } else { %> 
                الجدول الدراسي العام 
            <% } %>
        </h2>
        
        <div class="table-responsive">
            <table class="timetable">
                <thead>
                    <tr>
                        <th>اليوم</th>
                        <% for(let i=1; i<=8; i++) { %> <th>ح<%= i %></th> <% } %>
                    </tr>
                </thead>
                <tbody>
                    <% const jours = ['الأحد', 'الإثنين', 'الثلاثاء', 'الأربعاء', 'الخميس']; %>
                    <% jours.forEach(j => { %>
                        <tr>
                            <td class="day-header"><%= j %></td>
                            <% for(let p=1; p<=8; p++) { %>
                                <td class="slot-cell">
                                    <% let cell = schedule.find(s => s.jour === j && s.periode === p); %>
                                    <% if(cell) { %>
                                        <div class="cell-info">
                                            <span class="subject-name"><%= cell.matiere %></span>
                                            <span class="prof-name"><%= cell.prof_nom %></span>
                                            <span class="class-tag"><%= cell.classe %>/<%= cell.section %></span>
                                            <a href="/admin/timetable/supprimer/<%= cell.id %>" class="btn-delete-slot" onclick="return confirm('حذف هذه الحصة؟')">&times;</a>
                                        </div>
                                    <% } %>
                                </td>
                            <% } %>
                        </tr>
                    <% }) %>
                </tbody>
            </table>
        </div>
    </div>
</div>

<script>
    // 1. نظام التحكم في القائمة الجانبية
    const toggleBtn = document.getElementById('toggleSidebar');
    const sidebar = document.getElementById('sidebar');
    const mainContent = document.getElementById('main-content');

    toggleBtn.addEventListener('click', () => {
        if (window.innerWidth <= 768) {
            sidebar.classList.toggle('active');
        } else {
            sidebar.classList.toggle('collapsed');
            mainContent.classList.toggle('expanded');
        }
        
        // تغيير شكل الأيقونة
        const icon = toggleBtn.querySelector('i');
        icon.classList.toggle('fa-bars');
        icon.classList.toggle('fa-times');
    });

    // إغلاق القائمة عند النقر خارجها في الجوال
    document.addEventListener('click', (e) => {
        if (window.innerWidth <= 768 && !sidebar.contains(e.target) && !toggleBtn.contains(e.target)) {
            sidebar.classList.remove('active');
        }
    });

    // 2. منطق اختيار الصفوف بناءً على المعلم (كودك الأصلي)
    const allAffectations = <%- JSON.stringify(all_affectations) %>;
    function filterClasses() {
        const teacherId = document.getElementById('teacher_select').value;
        const classSelect = document.getElementById('class_select');
        classSelect.innerHTML = '<option value="">اختر الصف...</option>';
        const filtered = allAffectations.filter(a => a.enseignant_id == teacherId);
        if(filtered.length > 0) {
            classSelect.disabled = false;
            filtered.forEach(a => {
                let opt = document.createElement('option');
                opt.value = a.classe + "|" + a.section;
                opt.text = "صف " + a.classe + " / شعبة " + a.section;
                classSelect.add(opt);
            });
        } else {
            classSelect.disabled = true;
            classSelect.innerHTML = '<option value="">لا توجد صفوف مسندة</option>';
        }
    }
</script>
</body>
</html>