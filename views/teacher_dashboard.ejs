<!DOCTYPE html>
<html lang="ar" dir="rtl">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no">
    <title><%= titre %> - مدرسة ابن دريد</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <link rel="stylesheet" href="/css/teacher_inter_style.css">  
</head>
<body>

<div class="sidebar-overlay" id="sidebarOverlay" onclick="toggleSidebar()"></div>
<nav class="sidebar" id="sidebar">
    <div class="sidebar-header">
        <img src="/img/logo.png" alt="Logo" class="sidebar-logo"> <h3>لوحة المعلم</h3>
        <button class="close-sidebar" onclick="toggleSidebar()"><i class="fas fa-times"></i></button>
    </div>
    <ul class="sidebar-links">
        <li><a href="#" onclick="toggleSidebar()"><i class="fas fa-home"></i> الرئيسية</a></li>
        <li><a href="#timetableSection" onclick="toggleSidebar()"><i class="fas fa-calendar-alt"></i> جدول الحصص</a></li>
        <li><a href="#attendanceSection" onclick="toggleSidebar()"><i class="fas fa-user-check"></i> رصد الغياب</a></li>
        <li><a href="#behaviorSection" onclick="toggleSidebar()"><i class="fas fa-pen-fancy"></i> ملاحظات سلوكية</a></li>
        <li class="separator"></li>
        <li><a href="/logout" class="logout-link"><i class="fas fa-sign-out-alt"></i> تسجيل الخروج</a></li>
    </ul>
</nav>

<div class="container">
    
    <% if (success) { %>
        <div class="toast success-toast">
            <i class="fas fa-check-circle"></i> تم رصد الغياب بنجاح.
        </div>
    <% } %>

    <header class="main-header">
        <div class="header-right">
            <button class="menu-toggle" onclick="toggleSidebar()"><i class="fas fa-bars"></i></button>
            <div class="user-info-mini">
                <h1>أستاذ/ <%= prof.nom %></h1>
            </div>
        </div>
        <div class="avatar-mini"><i class="fas fa-user-circle"></i></div>
    </header>

    <section class="section no-padding" id="timetableSection">
        <div class="section-header pd-20">
            <i class="fas fa-clock"></i>
            <h2>جدول الحصص</h2>
        </div>
        <div class="timetable-wrapper">
            <div class="timetable-slider">
                <% if (sessions.length === 0) { %>
                    <p class="empty-msg">لا توجد حصص اليوم</p>
                <% } else { %>
                    <% sessions.sort((a,b) => a.periode - b.periode).forEach((s, index) => { 
                       let isNext = (index === 0); 
                    %>
                        <div class="session-card <%= isNext ? 'next-session' : '' %>">
                            <% if(isNext) { %><div class="neon-badge">التالية</div><% } %>
                            <span class="period">حصة <%= s.periode %></span>
                            <span class="class-name"><%= s.classe %> / <%= s.section %></span>
                        </div>
                    <% }) %>
                <% } %>
            </div>
        </div>
    </section>

    <section class="section alert-section">
        <div class="section-header">
            <i class="fas fa-bullhorn"></i>
            <h2>تنبيهات الإدارة</h2>
        </div>
        <div class="alerts-wrapper">
            <% if (replacements.length === 0) { %>
                <p class="no-alerts">✅ الكادر مكتمل اليوم.</p>
            <% } else { %>
                <% replacements.forEach(t => { %>
                    <div class="alert-item">
                        <span>غياب: <b><%= t.nom %></b></span>
                    </div>
                <% }) %>
            <% } %>
        </div>
    </section>

    <section class="section main-section" id="attendanceSection">
        <div class="section-header">
            <i class="fas fa-user-check"></i>
            <h2>رصد غياب الطلاب</h2>
        </div>
        <form action="/teacher/absences/mark" method="POST">
            <input type="hidden" name="teacher_id" value="<%= prof.id %>">
            <input type="hidden" name="date" value="<%= today %>">
            <div class="selection-box">
                <select name="periode" id="sessionSelect" required onchange="filterStudents()">
                    <option value="" disabled selected>-- اختر الحصة --</option>
                    <% sessions.forEach(s => { %>
                        <option value="<%= s.periode %>" data-class="<%= s.classe %>-<%= s.section %>">
                            حصة <%= s.periode %>: <%= s.classe %>/<%= s.section %>
                        </option>
                    <% }) %>
                </select>
            </div>
            <div id="tableContainer" class="table-container hidden">
                <div class="student-list-mobile">
                    <% students.forEach(s => { %>
                        <div class="student-card student-row" data-class-id="<%= s.classe %>-<%= s.section %>">
                            <span class="student-name"><%= s.nom %></span>
                            <label class="switch">
                                <input type="checkbox" name="student_ids[]" value="<%= s.id %>">
                                <span class="slider-toggle"></span>
                            </label>
                        </div>
                    <% }) %>
                </div>
                <button type="submit" class="btn-submit-full">إرسال الكشف</button>
            </div>
        </form>
    </section>

    <section class="section behavior-section" id="behaviorSection">
        <div class="section-header">
            <i class="fas fa-pen-nib"></i>
            <h2>ملاحظة سلوكية</h2>
        </div>
        <form action="/teacher/behavior/add" method="POST" class="quick-form">
            <input type="hidden" name="teacher_id" value="<%= prof.id %>">
            <select name="student_id" required>
                <option value="">اختر الطالب...</option>
                <% students.forEach(s => { %>
                    <option value="<%= s.id %>"><%= s.nom %></option>
                <% }) %>
            </select>
            <textarea name="event_desc" placeholder="اكتب الملاحظة هنا..." required></textarea>
            <button type="submit" class="btn-save-full">حفظ</button>
        </form>
    </section>

</div>

<div class="bottom-nav">
    <a href="#timetableSection" class="nav-item"><i class="fas fa-clock"></i><span>الجدول</span></a>
    <a href="#attendanceSection" class="nav-item active"><i class="fas fa-user-check"></i><span>الغياب</span></a>
    <a href="#behaviorSection" class="nav-item"><i class="fas fa-star"></i><span>سلوك</span></a>
    <a href="javascript:void(0)" onclick="toggleSidebar()" class="nav-item"><i class="fas fa-bars"></i><span>المزيد</span></a>
</div>

<script>
    function toggleSidebar() {
        const sidebar = document.getElementById('sidebar');
        const overlay = document.getElementById('sidebarOverlay');
        sidebar.classList.toggle('active');
        overlay.classList.toggle('active');
    }

    function filterStudents() {
        const select = document.getElementById('sessionSelect');
        const target = select.options[select.selectedIndex].getAttribute('data-class');
        const cards = document.querySelectorAll('.student-card');
        const container = document.getElementById('tableContainer');
        let count = 0;
        cards.forEach(card => {
            if (card.getAttribute('data-class-id') === target) {
                card.style.display = 'flex';
                count++;
            } else {
                card.style.display = 'none';
            }
        });
        if(count > 0) container.classList.remove('hidden');
        else container.classList.add('hidden');
    }

    window.onload = function() {
        const nextSession = document.querySelector('.next-session');
        if (nextSession) {
            nextSession.scrollIntoView({ behavior: 'smooth', inline: 'center', block: 'nearest' });
        }
    }
</script>
</body>
</html>