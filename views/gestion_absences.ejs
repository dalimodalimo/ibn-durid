<!DOCTYPE html>
<html lang="ar" dir="rtl">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>إدارة الغياب والاحتياط - مدرسة ابن دريد</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <link rel="stylesheet" href="/css/settings_style.css">
    <link rel="stylesheet" href="/css/absences_style.css">
</head>
<body>

<div class="sidebar">
    <div class="sidebar-header">
        <h2><i class="fas fa-user-clock"></i> شؤون الغياب</h2>
    </div>

    <div class="sidebar-nav">
        <div class="nav-label">الأساسيات</div>
        <a href="/admin/dashboard"><i class="fas fa-home"></i> العودة للرئيسية</a>
        
        <div class="nav-label">العمليات اليومية</div>
        <a href="#section-record"><i class="fas fa-user-plus"></i> تسجيل غياب</a>
        <a href="#section-list"><i class="fas fa-clipboard-list"></i> قائمة الغائبين</a>

        <div class="nav-label">التقارير</div>
        <a href="/admin/reports/absences"><i class="fas fa-file-invoice"></i> سجل الغياب العام</a>
        <a href="/admin/settings"><i class="fas fa-cog"></i> إعدادات النظام</a>
    </div>
</div>

<div class="main-content">
    <header class="page-header">
        <h1>إدارة الغياب والاحتياط الذكي</h1>
        <p>تاريخ اليوم: <strong><%= today %></strong></p>
    </header>

    <section class="card" id="section-record">
        <h3><i class="fas fa-user-plus"></i> تسجيل معلم غائب</h3>
        <form action="/admin/absences/ajouter" method="POST" class="form-abs-grid">
            <div class="input-group">
                <label>المعلم الغائب</label>
                <select name="enseignant_id" required>
                    <option value="">-- اختر المعلم --</option>
                    <% enseignants.forEach(e => { %> 
                        <option value="<%= e.id %>"><%= e.nom %> (<%= e.matiere %>)</option> 
                    <% }) %>
                </select>
            </div>
            <div class="input-group" style="flex: 2;">
                <label>سبب الغياب</label>
                <input type="text" name="raison" placeholder="مثال: ظرف طارئ، إجازة مرضية...">
            </div>
            <button type="submit" class="btn-submit-abs">
                <i class="fas fa-save"></i> تسجيل
            </button>
        </form>
    </section>

    <section class="card" id="section-list">
        <h3><i class="fas fa-clipboard-list"></i> قائمة الغيابات والبدلاء المقترحين</h3>
        <div class="absent-list-container">
            <% if (ghaibeen.length === 0) { %>
                <div class="empty-state-abs">
                    <i class="fas fa-check-circle"></i>
                    <p>لا يوجد غيابات مسجلة لهذا اليوم. اليوم يسير بانتظام!</p>
                </div>
            <% } else { %>
                <% ghaibeen.forEach(g => { %>
                    <div class="absent-item-card">
                        <div class="item-main-info">
                            <div class="teacher-details">
                                <span class="teacher-name"><%= g.nom %></span>
                                <span class="badge-subject"><%= g.matiere %></span>
                                <% if(g.raison) { %> 
                                    <p class="absence-reason"><i class="fas fa-info-circle"></i> <%= g.raison %></p>
                                <% } %>
                            </div>
                            <div class="item-actions">
                                <button onclick="getSuggestions('<%= g.enseignant_id %>', this)" class="btn-action-magic">
                                    <i class="fas fa-magic"></i> تحليل الاحتياط
                                </button>
                                <a href="/admin/absences/print-reserve/<%= g.enseignant_id %>" class="btn-action-print">
                                    <i class="fas fa-print"></i> طباعة
                                </a>
                                <a href="/admin/absences/supprimer/<%= g.id %>" class="btn-action-delete" onclick="return confirm('إلغاء تسجيل الغياب؟')">
                                    <i class="fas fa-times"></i>
                                </a>
                            </div>
                        </div>

                        <div id="box-<%= g.enseignant_id %>" class="suggestion-box-ui">
                            <div class="box-header">
                                <h4><i class="fas fa-lightbulb"></i> المعلمون المتاحون حالياً</h4>
                            </div>
                            <div id="load-<%= g.enseignant_id %>" class="loader-ui" style="display:none;">
                                <i class="fas fa-spinner fa-spin"></i> جاري فحص الجدول المدرسي...
                            </div>
                            <div id="results-<%= g.enseignant_id %>"></div>
                        </div>
                    </div>
                <% }) %>
            <% } %>
        </div>
    </section>
</div>

<script>
    // نفس دالة السكريبت السابقة مع تحسين طفيف في التنسيق البرمجي
    async function getSuggestions(teacherId, btnElement) {
        const box = document.getElementById(`box-${teacherId}`);
        const resultsDiv = document.getElementById(`results-${teacherId}`);
        const loader = document.getElementById(`load-${teacherId}`);

        if (box.classList.contains('active')) {
            box.classList.remove('active');
            return;
        }

        box.classList.add('active');
        resultsDiv.innerHTML = '';
        loader.style.display = 'block';

        try {
            const response = await fetch(`/admin/absences/suggestions/${teacherId}`);
            const data = await response.json();
            loader.style.display = 'none';

            if (data.suggestions && data.suggestions.length > 0) {
                let html = `<div class="absent-periods-info">فترات الاحتياج: <span>${data.absent_periods.join('، ')}</span></div>`;
                html += `<div class="suggestions-grid">`;
                data.suggestions.forEach(s => {
                    html += `
                        <div class="suggestion-item">
                            <div class="sug-icon"><i class="fas fa-user-check"></i></div>
                            <div class="sug-data">
                                <b>${s.nom}</b>
                                <small>${s.matiere}</small>
                            </div>
                        </div>`;
                });
                html += `</div>`;
                resultsDiv.innerHTML = html;
            } else {
                resultsDiv.innerHTML = `<div class="no-suggestions-error"><i class="fas fa-exclamation-triangle"></i> لا يوجد معلمون متاحون في جميع هذه الحصص.</div>`;
            }
        } catch (error) {
            loader.style.display = 'none';
            resultsDiv.innerHTML = `<p class="error-text">❌ فشل الاتصال بالنظام.</p>`;
        }
    }
</script>

</body>
</html>