        .stat-mini-grid { display: grid; grid-template-columns: 1fr 1fr; gap: 8px; }
        .stat-mini-card { background: var(--bg); padding: 8px; border-radius: 8px; text-align: center; border: 1px solid var(--border); }
        .stat-val { font-weight: 800; font-size: 1rem; color: var(--primary); display: block; }
        .stat-lbl { font-size: 0.65rem; color: var(--text-muted); }

        /* Smart Search */
        .search-container { position: relative; }
        .smart-dropdown {
            position: absolute; top: 100%; right: 0; left: 0;
            background: white; border: 1px solid var(--border);
            border-radius: 8px; box-shadow: 0 10px 15px -3px rgba(0,0,0,0.1);
            max-height: 160px; overflow-y: auto; z-index: 100;
            padding: 0; margin-top: 4px; list-style: none; display: none;
        }
        .smart-dropdown li { padding: 8px 12px; font-size: 0.8rem; cursor: pointer; border-bottom: 1px solid #f8fafc; transition: 0.2s; }
        .smart-dropdown li:hover { background: var(--bg); color: var(--accent); }
        input#teacherSearch.selected { border-color: #10b981; background: #f0fdf4; }

        /* Form Controls */
