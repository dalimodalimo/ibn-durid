<!DOCTYPE html>
<html lang="ar" dir="rtl">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= titre %> - مدرسة ابن دريد</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <link rel="stylesheet" href="/css/timetable_style.css">
</head>
<body>

    <header class="page-header">
        <div>
            <h1>إدارة الجدول المدرسي</h1>
            <p style="margin: 5px 0 0; color: #666;">تنظيم وتوزيع الحصص الأسبوعية</p>
        </div>
        <a href="/admin/dashboard" class="back-link">
            <i class="fas fa-arrow-right"></i> العودة للوحة التحكم
        </a>
    </header>

    <div class="filter-card">
        <form action="/admin/timetable" method="GET" class="filter-grid">
            <div class="input-group">
                <label><i class="fas fa-filter"></i> عرض حسب المعلم:</label>
                <select name="teacher_filter" onchange="this.form.submit()">
                    <option value="">-- كل المعلمين --</option>
                    <% enseignants.forEach(p => { %>
                        <option value="<%= p.id %>" <%= teacher_filter == p.id ? 'selected' : '' %>><%= p.nom %></option>
                    <% }) %>
                </select>
            </div>
            
            <div class="input-group">
                <label><i class="fas fa-layer-group"></i> عرض حسب الصف:</label>
                <select name="class_filter" onchange="this.form.submit()">
                    <option value="">-- كل الصفوف --</option>
                    <% unique_classes.forEach(c => { %>
                        <% let val = c.classe + "-" + c.section; %>
                        <option value="<%= val %>" <%= class_filter == val ? 'selected' : '' %>>الصف <%= c.classe %> / <%= c.section %></option>
                    <% }) %>
                </select>
            </div>
            <a href="/admin/timetable" style="color: #d32f2f; text-decoration: none; font-size: 0.9rem;">إعادة تعيين</a>
        </form>
    </div>

    <div class="section-card">
        <h3><i class="fas fa-plus-circle"></i> إضافة حصة جديدة</h3>
        <form action="/admin/timetable/ajouter" method="POST" class="form-inline">
            <div class="input-group">
                <label>المعلم</label>
                <select name="enseignant_id" id="teacher_select" required onchange="filterClasses()">
                    <option value="">اختر المعلم...</option>
                    <% enseignants.forEach(p => { %> <option value="<%= p.id %>"><%= p.nom %></option> <% }) %>
                </select>
            </div>

            <div class="input-group">
                <label>الصف المسند</label>
                <select name="class_info" id="class_select" required disabled>
                    <option value="">حدد المعلم أولاً</option>
                </select>
            </div>

            <div class="input-group">
                <label>اليوم</label>
                <select name="jour" required>
                    <option value="الأحد">الأحد</option>
                    <option value="الإثنين">الإثنين</option>
                    <option value="الثلاثاء">الثلاثاء</option>
                    <option value="الأربعاء">الأربعاء</option>
                    <option value="الخميس">الخميس</option>
                </select>
            </div>

            <div class="input-group">
                <label>الحصة</label>
                <select name="periode" required>
                    <% for(let i=1; i<=8; i++) { %> <option value="<%= i %>">الحصة <%= i %></option> <% } %>
                </select>
            </div>

            <button type="submit" class="btn-save"><i class="fas fa-save"></i> حفظ الحصة</button>
        </form>
    </div>

    <div class="section-card">
        <h2 style="text-align:center; color: var(--primary-blue); margin-bottom: 20px;">
            <i class="fas fa-table"></i>
            <% if(teacher_filter) { %> 
                جدول المعلم: <%= enseignants.find(e => e.id == teacher_filter).nom %> 
            <% } else if(class_filter) { %> 
                جدول الصف: <%= class_filter.replace('-',' / ') %> 
            <% } else { %> 
                الجدول العام للمدرسة 
            <% } %>
        </h2>
        
        <div class="table-responsive">
            <table>
                <thead>
                    <tr>
                        <th>اليوم</th>
                        <% for(let i=1; i<=8; i++) { %> <th>ح<%= i %></th> <% } %>
                    </tr>
                </thead>
                <tbody>
                    <% const jours = ['الأحد', 'الإثنين', 'الثلاثاء', 'الأربعاء', 'الخميس']; %>
                    <% jours.forEach(j => { %>
                        <tr>
                            <td class="day-column"><%= j %></td>
                            <% for(let p=1; p<=8; p++) { %>
                                <td>
                                    <% let cell = schedule.find(s => s.jour === j && s.periode === p); %>
                                    <% if(cell) { %>
                                        <div class="cell-info">
                                            <strong><%= cell.matiere %></strong>
                                            <span><%= cell.prof_nom %></span>
                                            <small>(<%= cell.classe %>/<%= cell.section %>)</small>
                                        </div>
                                    <% } %>
                                </td>
                            <% } %>
                        </tr>
                    <% }) %>
                </tbody>
            </table>
        </div>
    </div>

    <script>
        const allAffectations = <%- JSON.stringify(all_affectations) %>;
        function filterClasses() {
            const teacherId = document.getElementById('teacher_select').value;
            const classSelect = document.getElementById('class_select');
            classSelect.innerHTML = '<option value="">اختر الصف...</option>';
            const filtered = allAffectations.filter(a => a.enseignant_id == teacherId);
            if(filtered.length > 0) {
                classSelect.disabled = false;
                filtered.forEach(a => {
                    let opt = document.createElement('option');
                    opt.value = a.classe + "|" + a.section;
                    opt.text = "صف " + a.classe + " / شعبة " + a.section;
                    classSelect.add(opt);
                });
            } else {
                classSelect.disabled = true;
                classSelect.innerHTML = '<option value="">لا توجد صفوف مسندة لهذا المعلم</option>';
            }
        }
    </script>
</body>
</html>