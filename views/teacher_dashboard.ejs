<!DOCTYPE html>
<html lang="ar" dir="rtl">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= titre %> - مدرسة ابن دريد</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <link rel="stylesheet" href="/css/teacher_style.css">  
</head>
<body>

<div class="container">
    
    <% if (success) { %>
        <div class="toast success-toast">
            <i class="fas fa-check-circle"></i> تم رصد الغياب بنجاح وإرساله للإدارة.
        </div>
    <% } %>

    <header class="main-header">
        <div class="user-profile">
            <div class="avatar"><i class="fas fa-user-tie"></i></div>
            <div class="user-info">
                <h1>أهلاً، أستاذ/ <%= prof.nom %></h1>
                <span><i class="fas fa-book-open"></i> <%= prof.matiere %> | <i class="fas fa-calendar-day"></i> <%= today %></span>
            </div>
        </div>
        <a href="/logout" class="btn-logout-alt">
            <span>خروج</span> <i class="fas fa-sign-out-alt"></i>
        </a>
    </header>

    <div class="dashboard-grid">
        
        <section class="section side-section">
            <div class="section-header">
                <i class="fas fa-clock"></i>
                <h2>جدول اليوم</h2>
            </div>
            <div class="timetable-list">
                <% if (sessions.length === 0) { %>
                    <p class="empty-msg">لا حصص اليوم</p>
                <% } else { %>
                    <% sessions.sort((a,b) => a.periode - b.periode).forEach(s => { %>
                        <div class="session-card">
                            <span class="period">ح<%= s.periode %></span>
                            <span class="class-name"><%= s.classe %>/<%= s.section %></span>
                        </div>
                    <% }) %>
                <% } %>
            </div>
        </section>

        <section class="section alert-section">
            <div class="section-header">
                <i class="fas fa-bullhorn"></i>
                <h2>تنبيهات الإدارة</h2>
            </div>
            <div class="alerts-wrapper">
                <% if (replacements.length === 0) { %>
                    <p class="no-alerts">✅ لا توجد غيابات مسجلة حالياً.</p>
                <% } else { %>
                    <% replacements.forEach(t => { %>
                        <div class="alert-item">
                            <i class="fas fa-exclamation-triangle"></i>
                            <span>غياب <b><%= t.nom %></b> (<%= t.matiere %>)</span>
                        </div>
                    <% }) %>
                <% } %>
            </div>
        </section>

    </div>

    <section class="section main-section">
        <div class="section-header">
            <i class="fas fa-user-check"></i>
            <h2>رصد غياب الطلاب</h2>
        </div>
        
        <form action="/teacher/absences/mark" method="POST" class="attendance-form">
            <input type="hidden" name="teacher_id" value="<%= prof.id %>">
            <input type="hidden" name="date" value="<%= today %>">
            
            <div class="selection-box">
                <label>اختر الحصة للبدء:</label>
                <div class="custom-select">
                    <select name="periode" id="sessionSelect" required onchange="filterStudents()">
                        <option value="" disabled selected>-- اختر من الجدول --</option>
                        <% sessions.forEach(s => { %>
                            <option value="<%= s.periode %>" data-class="<%= s.classe %>-<%= s.section %>">
                                الحصة <%= s.periode %>: <%= s.classe %> / <%= s.section %>
                            </option>
                        <% }) %>
                    </select>
                </div>
            </div>

            <div id="tableContainer" class="table-container hidden">
                <table class="styled-table">
                    <thead>
                        <tr>
                            <th>الطالب</th>
                            <th>الحالة</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% students.forEach(s => { %>
                            <tr class="student-row" data-class-id="<%= s.classe %>-<%= s.section %>">
                                <td><%= s.nom %></td>
                                <td>
                                    <label class="switch">
                                        <input type="checkbox" name="student_ids[]" value="<%= s.id %>">
                                        <span class="slider"></span>
                                        <span class="label-text">غائب</span>
                                    </label>
                                </td>
                            </tr>
                        <% }) %>
                    </tbody>
                </table>
                <button type="submit" class="btn-submit-full">
                    <i class="fas fa-cloud-upload-alt"></i> حفظ وإرسال الكشف
                </button>
            </div>
        </form>
    </section>

    <section class="section behavior-section">
        <div class="section-header">
            <i class="fas fa-star-half-alt"></i>
            <h2>سجل الملاحظات السلوكية</h2>
        </div>
        <form action="/teacher/behavior/add" method="POST" class="quick-form">
            <input type="hidden" name="teacher_id" value="<%= prof.id %>">
            <select name="student_id" required>
                <option value="">اختر الطالب...</option>
                <% students.forEach(s => { %>
                    <option value="<%= s.id %>"><%= s.nom %> (<%= s.classe %>/<%= s.section %>)</option>
                <% }) %>
            </select>
            <input type="text" name="event_desc" placeholder="الملاحظة (مثال: تميز، مشاغبة...)" required>
            <button type="submit" class="btn-save-circle"><i class="fas fa-plus"></i></button>
        </form>
    </section>

</div>

<script>
    function filterStudents() {
        const select = document.getElementById('sessionSelect');
        const target = select.options[select.selectedIndex].getAttribute('data-class');
        const rows = document.querySelectorAll('.student-row');
        const container = document.getElementById('tableContainer');

        let count = 0;
        rows.forEach(row => {
            if (row.getAttribute('data-class-id') === target) {
                row.style.display = 'table-row';
                count++;
            } else {
                row.style.display = 'none';
            }
        });

        if(count > 0) container.classList.remove('hidden');
        else container.classList.add('hidden');
    }
</script>
</body>
</html>