        .p-3 { order: 3; } .p-3 .p-box { height: 30px; background: #cd7f32; }
        .p-name { font-size: 0.7rem; font-weight: 800; margin-bottom: 2px; white-space: nowrap; overflow: hidden; text-overflow: ellipsis; }

        /* Table */
        .table-container { flex-grow: 1; overflow-y: auto; }
        .compact-table { width: 100%; border-collapse: collapse; font-size: 0.8rem; }
        .compact-table th { position: sticky; top: 0; background: #f8fafc; padding: 10px; text-align: right; border-bottom: 2px solid var(--border); z-index: 5; }
        .compact-table td { padding: 8px 10px; border-bottom: 1px solid #f1f5f9; }

        @media (max-width: 850px) {
            .dashboard-wrapper { grid-template-columns: 1fr; height: auto; overflow: auto; }
            body { overflow: auto; }
        }
    </style>
</head>
