        .award-form-compact label { font-size: 0.7rem; font-weight: 700; color: var(--text-muted); }
        .award-form-compact select, .award-form-compact input { 
            padding: 8px; font-size: 0.8rem; border-radius: 6px; border: 1px solid var(--border); background: var(--bg); width: 100%; box-sizing: border-box;
        }

        .btn-small { 
            padding: 10px; border-radius: 8px; border: none; font-weight: 700; font-size: 0.8rem;
            cursor: pointer; transition: 0.2s; display: flex; align-items: center; justify-content: center; gap: 5px;
        }

        /* Countdown Button Style */
        .btn-reset-safe {
            background: #fff1f2; color: #e11d48; width: 100%; border: 1px solid #fda4af;
            position: relative; overflow: hidden;
        }
        .btn-reset-safe:disabled { opacity: 0.6; cursor: not-allowed; }

        /* Podium */
        .main-panel { display: flex; flex-direction: column; gap: 12px; overflow: hidden; }
        .compact-podium {
            display: flex; justify-content: center; align-items: flex-end;
            height: 130px; gap: 10px; padding-bottom: 10px; border-bottom: 1px solid var(--border);
        }
        .p-step { flex: 1; max-width: 120px; text-align: center; }
        .p-box { border-radius: 8px 8px 4px 4px; color: white; display: flex; flex-direction: column; justify-content: center; }
        .p-1 { order: 2; } .p-1 .p-box { height: 70px; background: var(--gold); }
